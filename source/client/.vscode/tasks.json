{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "react-start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "line": 1,
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^VITE v[0-9\\.]+  ready in [0-9]+ms$",
            "endsPattern": "https://(localhost|127.0.0.1):[0-9]+/$"
          }
        }
      ],
      "dependsOn": [
        "tsc"
      ]
    },
    {
      "label": "react-terminate",
      "type": "shell",
      "command": "${input:terminate}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "react-start"
    }
  ]
}
