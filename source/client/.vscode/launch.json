{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "Debug Teams (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://teams.microsoft.com/_#/l/app/{{AppId}}?installAppPackage=true",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "-incognito"
      ],
      "preLaunchTask": "react-start",
      "postDebugTask": "terminate-react-start"
    },
    {
      "name": "Debug (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "-incognito"
      ],
      "preLaunchTask": "react-start",
      "postDebugTask": "terminate-react-start"
    }
  ]
}
