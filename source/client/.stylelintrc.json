{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recess-order"
  ],
  "overrides": [
    {
      "customSyntax": "postcss-styled-syntax",
      "files": [
        "src/**/*.{jsx,tsx}"
      ],
      "rules": {
        "at-rule-empty-line-before": "never",
        "declaration-empty-line-before": "never",
        "rule-empty-line-before": "never"
      }
    }
  ]
}
