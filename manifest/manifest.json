{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
  "manifestVersion": "1.11",
  "version": "1.7.4",
  "showLoadingIndicator": true,
  "isFullScreen": true,
  "id": "bb98adcf-688c-409c-862b-8f546689f241",
  "packageName": "dev.karamem0.teamtile",
  "developer": {
    "name": "karamem0",
    "websiteUrl": "https://github.com/karamem0/teamtile",
    "privacyUrl": "https://github.com/karamem0/teamtile",
    "termsOfUseUrl": "https://github.com/karamem0/teamtile"
  },
  "icons": {
    "color": "icon_color.png",
    "outline": "icon_outline.png"
  },
  "name": {
    "short": "Teamtile",
    "full": "Teamtile"
  },
  "description": {
    "short": "Display your joined teams in tile view and access quickly.",
    "full": "Are you frustrated with finding a team? Teamtile provides these features to you:\n- View your joined teams as tiles\n- View team members and channels\n- Link to SharePoint Document Library"
  },
  "accentColor": "#FFFFFF",
  "staticTabs": [
    {
      "entityId": "index",
      "name": "Teamtile",
      "contentUrl": "https://{{DomainName}}",
      "websiteUrl": "https://{{DomainName}}",
      "scopes": [
        "personal"
      ]
    }
  ],
  "localizationInfo": {
    "defaultLanguageTag": "en-us",
    "additionalLanguages": [
      {
        "languageTag": "ja-jp",
        "file": "ja-jp.json"
      }
    ]
  },
  "validDomains": [
    "{{DomainName}}"
  ],
  "webApplicationInfo": {
    "id": "{{ClientId}}",
    "resource": "api://{{DomainName}}/{{ClientId}}"
  }
}
