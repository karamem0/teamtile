{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.12/MicrosoftTeams.schema.json",
  "version": "1.9.3",
  "manifestVersion": "1.12",
  "id": "{{AppId}}",
  "packageName": "dev.karamem0.teamtile",
  "name": {
    "short": "Teamtile",
    "full": "Teamtile"
  },
  "developer": {
    "name": "karamem0",
    "websiteUrl": "https://github.com/karamem0/teamtile",
    "privacyUrl": "https://github.com/karamem0/teamtile/blob/main/PRIVACY.md",
    "termsOfUseUrl": "https://github.com/karamem0/teamtile/blob/main/TERMS_OF_USE.md"
  },
  "description": {
    "short": "Tile your teams for quick access.",
    "full": "Are you frustrated with finding a team? Teamtile provides these features to you:\n- View your joined teams as tiles\n- View team members and channels\n- Link to SharePoint Document Library\n- Filter teams, channels, members"
  },
  "icons": {
    "outline": "icon_outline.png",
    "color": "icon_color.png"
  },
  "accentColor": "#FFFFFF",
  "staticTabs": [
    {
      "entityId": "index",
      "name": "Teamtile",
      "contentUrl": "https://{{AppDomain}}",
      "websiteUrl": "https://{{AppDomain}}",
      "scopes": [
        "personal"
      ]
    }
  ],
  "validDomains": [
    "{{AppDomain}}"
  ],
  "webApplicationInfo": {
    "id": "{{AppId}}",
    "resource": "api://{{AppDomain}}/{{AppId}}"
  },
  "localizationInfo": {
    "defaultLanguageTag": "en-us",
    "additionalLanguages": [
      {
        "languageTag": "ja-jp",
        "file": "ja-jp.json"
      }
    ]
  },
  "showLoadingIndicator": true,
  "isFullScreen": true
}
